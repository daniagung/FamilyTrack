<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/login_bg">


    <Button

        android:id="@+id/parent"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/i_am_parent"
        android:textColor="#FFF"
        android:background="#ff1492c6"
        android:layout_alignTop="@+id/child"
        android:layout_toRightOf="@+id/child"
        android:layout_toEndOf="@+id/child"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <Button

        android:id="@+id/child"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/i_am_child"
        android:textColor="#FFF"
        android:background="#ff11b29a"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>